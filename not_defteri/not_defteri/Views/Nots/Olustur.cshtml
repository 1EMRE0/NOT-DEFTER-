@model not_defteri.Models.Not

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-plus me-2"></i>Yeni Not Oluştur</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Olustur">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Başlık</label>
                    <input asp-for="Name" class="form-control" placeholder="Not başlığını girin..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-semibold">İçerik</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Not içeriğini yazın..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Font Awesome ikonlar için -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
