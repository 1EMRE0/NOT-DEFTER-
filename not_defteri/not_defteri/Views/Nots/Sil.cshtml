@model not_defteri.Models.Not

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-trash-can me-2"></i>Notu Sil</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Geri Dön
            </a>
        </div>
        <div class="card-body">
            <h5 class="text-danger fw-bold mb-4">Bu notu silmek istediğinize emin misiniz?</h5>
            <dl class="row">
                <dt class="col-sm-3">Başlık:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">İçerik:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3">Oluşturulma:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </dl>

            <form asp-action="Sil">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <input type="submit" value="Evet, Sil" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Font Awesome için -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
