<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - not_defteri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Genel stiller */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
            margin: 0; /* Tarayıcıların varsayılan margin'lerini kaldır */
            padding-bottom: 60px; /* Footer için yeterli boşluk bırak */
            position: relative; /* Footer'ı sabitlemek için */
            min-height: 100vh; /* Sayfanın en az ekran yüksekliğinde olmasını sağla */
        }

        /* Başlık stilleri */
        h1, h2, h3, h4, h5, h6 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        /* Link stilleri */
        a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        /* Navbar stilleri */
        .navbar {
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            padding: 0.75rem 1rem;
        }

        .navbar-toggler {
            border: none;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        /* Container stilleri */
        .container {
            max-width: 1200px;
            margin: 2rem auto; /* Dikeyde 2rem boşluk ve yatayda ortala */
            padding: 1.5rem;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Main stilleri */
        main {
            flex: 1 0 auto; /* Sticky footer için gerekli */
        }

        /* Footer stilleri */
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 1rem 0;
            text-align: center;
            font-size: 0.9rem;
            color: #6c757d;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }

        /* Buton stilleri (örnek) */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        /* Form elemanları */
        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
            padding: 0.75rem;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        /* Kart stilleri */
        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: #007bff;
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 8px 8px 0 0;
        }

        .card-body {
            padding: 1.5rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Nots" asp-action="Index">not_defteri</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Nots" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            &copy; 2025 - not_defteri - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>